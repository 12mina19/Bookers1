<!DOCTYPE HTML>

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>Bookers</title>
    <link rel="stylesheet" href="style.css" />
  </head>



<body>

<%= flash[:complete] %>


<h1>Editing Book</h1>

  <%= form_with model:@book do |f| %>

    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
  
    <div class="actions">
     <%= f.submit 'Update Book' %>
    </div>
  
    <span>
      <%= link_to 'Show', book_path(@book.id) %>
    </span>
     | 
    <span>
      <%= link_to 'Back', books_path %>
    </span>

  <% end %>



  </body>
</html>


